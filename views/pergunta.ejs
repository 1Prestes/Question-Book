<%- include('partials/header.ejs');%>

    <body>

        <%- include('partials/navbar.ejs'); %>

            <div class="container">
                <h1 class="text-center mt-5">
                    <%= pergunta.titulo%>
                </h1>
                <p class="text-center mt-4">
                    <%= pergunta.pergunta %>
                </p>

                <form class="mt-5" method="POST" action="/responder">
                    <div class="form-group">
                        <textarea class="form-control" name="corpo" rows="4" placeholder="Escreva aqui sua resposta..."></textarea>
                    </div>
                    <input type="hidden" value="<%=pergunta.id%>" name="id" />
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary  ">Responder</button>
                    </div>
                </form>

                <h2>Respostas</h2>

                <section class="respostas">
                    <% respostas.forEach( resposta => { %>
                        <p class="shadow-none p-3 mb-3 bg-light rounded">
                            <%= resposta.corpo %>
                        </p>
                        <% }); %>
                </section>

            </div>

            <%- include('partials/footer.ejs'); %>
    </body>

    </html>